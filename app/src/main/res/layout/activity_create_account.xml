<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ryan.recap.CreateAccountActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Profile Photo"
                android:layout_marginTop="8dp"
                android:id="@+id/photoTV"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profilePictureIV"
                android:src="@drawable/blankprofile"
                android:layout_above="@+id/nameTV"
                android:layout_centerInParent="true"
                android:layout_below="@+id/photoTV"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="centerInside"
                android:maxWidth="200dp"
                android:maxHeight="200dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Name"
                android:layout_marginTop="8dp"
                android:id="@+id/nameTV"
                android:layout_centerVertical="true"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Anthony Geranio"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/nameTV"
                android:id="@+id/nameET"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Email Address"
                android:layout_below="@+id/nameET"
                android:layout_marginTop="24dp"
                android:id="@+id/emailTV"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Valid Quinnipac .edu Email Address"
                android:layout_below="@+id/emailTV"
                android:layout_marginTop="8dp"
                android:id="@+id/emailET"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Password"
                android:layout_below="@+id/emailET"
                android:layout_marginTop="24dp"
                android:id="@+id/passwordTV"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_below="@+id/passwordTV"
                android:layout_marginTop="8dp"
                android:id="@+id/passwordET"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:layout_below="@+id/passwordET"
                android:layout_marginTop="8dp"
                android:id="@+id/confirmPasswordET"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/confirmPasswordET"
                android:text="Create Account"
                android:background="@color/primary800"
                android:id="@+id/createAccountButton"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
